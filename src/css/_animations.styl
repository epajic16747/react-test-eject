/*
  Possible Animations:
  enter
  leave
  appear Must set transitionAppear={true} on animation component
*/
//PRVOJERITI NEKE STVARI NE RADE
.order-enter
  //background red
  transition all 1.0s
  transform translateX(-120%) //rotate(1000deg)
  max-height 0
  padding 0 !important
  &.order-enter-active
    //background yellow 
    max-height 60px
    padding 2rem 0 !important
    transform translateX(0)// rotate(0)


.order-leave
  trasition all 1.0s

  transform translateX(0)  
  &.order-leave-active  
    transform translateX(120%)    
    max-height 0
    padding 0     

.count-enter
  transform all 2.5s
  transform translateY(100%)
  &.count-enter-active
    transform translateY(0)

.count-leave
  transform all 2.5s
    transform translateY(0)  
    position absolute  
    left 0
    bottom 0  
  &.count-leave-active
    transform translateY(-100%)    

